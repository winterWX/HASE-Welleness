/* --------------------------------------------------------------------------------------------------- */
page{
  background-color: #FAFAFA;
  /*background-color: red;*/
}
.top-input{
  margin-bottom: 40rpx;
  position: relative;
}
.top-input image{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top:12rpx;
  left: 20rpx;
}
.inputWidth{
  width: 620rpx;
  border: 1rpx solid #E6E6E6;
  border-radius: 25rpx;
  background-color: #E6E6E6;
  font-size: 30rpx;
  padding-left: 60rpx;
  caret-color:#7EF460;
  color: #6666;
  height: 60rpx;
}
.container_main {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  box-sizing: border-box;
} 
.info{
  /* margin-bottom: 40rpx;
  border-bottom: 30rpx solid #F7F7F7; */
  background-color:#FFFFFF;
  height: 400rpx;
  margin-bottom: 25rpx;
}
.top-block{
  display: flex;
  /* //justify-content: center; */
  /*align-items: center; */
}
.top-block .title{
  font-weight: 900;
  width: 450rpx;
  height: 220rpx;
   /*margin-top: -30rpx;*/
}
.mainText{
  height: 160rpx;
}
.top-block .top-blockImage{
  width: 195rpx;
  height: 195rpx;
  margin-left: 35rpx;
  border-radius: 15rpx;
  border: 1rpx solid #e6e6e6;
}
.top-block .top-blockImageBoth{
  width: 195rpx;
  height: 195rpx;
  margin-left: 38rpx;
  background-color: #e6e6e6;
  border: 1rpx solid #e6e6e6;
  border-radius: 15rpx;
}
.info .description_text{
  font-size: 32rpx;
  margin-top: 5rpx;  
  color: #AAAAAA;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.bottom-time{
  margin-top: 10rpx;
  margin: 15rpx 0 15rpx 0;
  display: flex;
  align-items: center;
}
.bottom-time .leftTime{
  color: #AAAAAA;
  font-size: 30rpx;
  display: flex; 
  width: 500rpx;
}
.numTagContent{
  display: flex;
  align-items: center;
}
.numTag{
  font-size: 25rpx;
  padding: 5rpx;
  width: 45rpx;
  color: #AAAAAA;
}
.leftTime .itemBtn{
  padding: 4rpx 6rpx;
  margin-right: 5rpx;
  margin-left: 5rpx;  
}
.bottom-time .rightShare{
  /*margin-left: 420rpx;*/
  display: flex;
  align-items: center;
}
.bottom-time .rightShare image{
  width: 34rpx;
  height: 34rpx;
  margin-top: -2rpx
}
.rightShare .collectNum{
  color: #AAAAAA;
  margin-left: 6rpx;
  font-size: 31rpx;
}
.timeText{
  display: flex;
  align-items: center;
}
.timeText .timeTextLeft{
    font-size: 31rpx;
    font-weight: normal;
    color: #A2A2A2;
}
.timeText .timeText-time{
   font-size: 30rpx;
   font-weight: normal;
   margin-left: 30rpx;
   color: #A2A2A2;
}
.noshadow{
  hover-class:none;
}
.BackColorBu{
  background-color: #F0FFF9;
  color: #84D7B0;
  border:1rpx solid #9FE5CA;
}
.BackColorOr{
  background-color: #FFF4F0;
  color: #F1916F;
  border:1rpx solid #FACAB5;
}
.BackColorCh{
  background-color: #F1FAFF;
  color: #A2D7F8;
  border:1rpx solid #BCE5F9;
}
.defualtColor{
  background-color: #cccc;
  color: rgb(104, 110, 114);
  border:1rpx solid rgb(107, 108, 109);
}


